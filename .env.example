# Server Configuration
PORT=3000
NODE_ENV=development

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# Database Configuration
# For Prisma (SQL)
DATABASE_URL="postgresql://username:password@localhost:5432/telegram_bot_db"

# For MongoDB (optional)
MONGODB_URI=mongodb://localhost:27017/telegram_bot_db

# For DynamoDB (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
DYNAMODB_TABLE=telegram_bot_messages
